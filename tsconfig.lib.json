{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2020",
    "baseUrl": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "es",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/index.js", "./src/App.tsx", "./src/main.tsx", "./src/react-app-env.d.ts"]
}

